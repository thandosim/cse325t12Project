@using Microsoft.Extensions.Options
@using t12Project.Options
@inject IOptions<MapboxOptions> MapboxConfig

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        hitchBlue: '#0F172A',
                        hitchOrange: '#F97316'
                    }
                }
            }
        }
    </script>
    
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin="" />
    
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="css/accessibility-fixes.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <CascadingAuthenticationState>
        <Routes />
    </CascadingAuthenticationState>
    
    <!-- Leaflet JavaScript -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""></script>
    
    <!-- Application Scripts -->
    <script src="_framework/blazor.web.js"></script>
    <script src="js/auth.js"></script>
    <script src="js/modals.js"></script>
    <script src="js/mapInterop.js"></script>
    <script src="js/locationTracking.js"></script>
</body>

</html>

@code {
    protected override void OnInitialized()
    {
        // Validate that Mapbox access token is configured
        if (string.IsNullOrEmpty(MapboxConfig.Value.AccessToken))
        {
            Console.WriteLine("⚠ Warning: Mapbox:AccessToken is not configured. Maps functionality will not work.");
        }
        else
        {
            Console.WriteLine("✓ Mapbox access token configured");
        }
    }
}
