<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(t12Project.Components.Layout.MainLayout)">
            <NotAuthorized>
                @if (context.User.Identity?.IsAuthenticated != true)
                {
                    <RedirectToLogin />
                }
                else
                {
                    <div class="min-h-screen bg-slate-50 flex items-center justify-center">
                        <div class="rounded-3xl border border-red-200 bg-red-50 p-10 text-center max-w-md">
                            <p class="text-sm uppercase tracking-widest text-red-700">Access Denied</p>
                            <h1 class="mt-3 text-2xl font-bold text-red-700">Not Authorized</h1>
                            <p class="mt-3 text-slate-600">You don't have permission to access this resource.</p>
                            <a href="/" class="mt-6 inline-block rounded-2xl bg-slate-900 px-6 py-3 text-white font-semibold hover:bg-slate-800">Go Home</a>
                        </div>
                    </div>
                }
            </NotAuthorized>
            <Authorizing>
                <div class="min-h-screen bg-slate-50 flex items-center justify-center">
                    <p class="text-slate-500">Checking authorization...</p>
                </div>
            </Authorizing>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Page Not Found</PageTitle>
        <LayoutView Layout="typeof(t12Project.Components.Layout.MainLayout)">
            <div class="min-h-screen bg-slate-50 flex items-center justify-center">
                <div class="rounded-3xl border border-slate-200 bg-white p-10 text-center max-w-md shadow-lg">
                    <p class="text-sm uppercase tracking-widest text-orange-700">Error 404</p>
                    <h1 class="mt-3 text-3xl font-bold text-slate-900">Page Not Found</h1>
                    <p class="mt-3 text-slate-600">The page you're looking for doesn't exist or has been moved.</p>
                    <a href="/" class="mt-6 inline-block rounded-2xl bg-orange-500 px-6 py-3 text-white font-semibold hover:bg-orange-400">Back to Home</a>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>
