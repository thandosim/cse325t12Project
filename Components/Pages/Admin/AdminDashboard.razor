@page "/admin"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Authorization
@using System.ComponentModel.DataAnnotations
@using System.Linq
@inject AdminUserService AdminUserService

<PageTitle>Admin dashboard</PageTitle>

<section class="min-h-screen bg-slate-50 py-10">
    <div class="mx-auto max-w-6xl space-y-8 px-4">
        <header class="rounded-3xl bg-white p-8 shadow">
            <h1 class="text-3xl font-extrabold text-hitchBlue">Admin control center</h1>
            <p class="mt-2 text-sm text-slate-500">Manage every account across LoadHitch. Create drivers, invite customers, block malicious users, and keep the data clean.</p>
        </header>

        <section class="rounded-3xl bg-white p-8 shadow">
            <h2 class="text-xl font-semibold text-hitchBlue">Create a new user</h2>
            @if (!string.IsNullOrWhiteSpace(_createMessage))
            {
                <div class="mt-4 rounded-md border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">@_createMessage</div>
            }
            <EditForm FormName="admin-create-user" Model="_newUser" OnValidSubmit="CreateUserAsync">
                <DataAnnotationsValidator />
                <div class="mt-4 grid gap-4 md:grid-cols-2">
                    <label class="text-sm font-semibold text-slate-700">
                        Full name
                        <InputText class="mt-1 w-full rounded-xl border border-slate-200 px-4 py-3" @bind-Value="_newUser.FullName" />
                    </label>
                    <label class="text-sm font-semibold text-slate-700">
                        Email
                        <InputText type="email" class="mt-1 w-full rounded-xl border border-slate-200 px-4 py-3" @bind-Value="_newUser.Email" />
                    </label>
                    <label class="text-sm font-semibold text-slate-700">
                        Password
                        <InputText type="password" class="mt-1 w-full rounded-xl border border-slate-200 px-4 py-3" @bind-Value="_newUser.Password" />
                    </label>
                    <label class="text-sm font-semibold text-slate-700">
                        Role
                        <InputSelect class="mt-1 w-full rounded-xl border border-slate-200 px-4 py-3" @bind-Value="_newUser.Role">
                            @foreach (var role in _roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </InputSelect>
                    </label>
                </div>
                <button type="submit" class="mt-6 rounded-2xl bg-hitchBlue px-6 py-3 text-white font-semibold disabled:opacity-60" disabled="@_isCreating">
                    @(_isCreating ? "Creating..." : "Create user")
                </button>
            </EditForm>
        </section>

        <section class="rounded-3xl bg-white p-8 shadow">
            <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
                <h2 class="text-xl font-semibold text-hitchBlue">Users</h2>
                <button class="text-sm text-slate-500" @onclick="LoadUsersAsync" disabled="@_isLoading">
                    @(_isLoading ? "Refreshing..." : "Refresh list")
                </button>
            </div>

            @if (_tableMessage is not null)
            {
                <div class="mt-4 rounded-md border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">@_tableMessage</div>
            }

            @if (_isLoading)
            {
                <p class="mt-6 text-sm text-slate-500">Loading users...</p>
            }
            else if (_users?.Count == 0)
            {
                <p class="mt-6 text-sm text-slate-500">No users yet. Create one above.</p>
            }
            else if (_users is not null)
            {
                <div class="mt-6 overflow-x-auto">
                    <table class="min-w-full text-left text-sm">
                        <thead>
                            <tr class="text-slate-500">
                                <th class="px-4 py-2">Name</th>
                                <th class="px-4 py-2">Email</th>
                                <th class="px-4 py-2">Role</th>
                                <th class="px-4 py-2">Status</th>
                                <th class="px-4 py-2 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in _users)
                            {
                                <tr class="border-t border-slate-100">
                                    <td class="px-4 py-3 font-semibold text-slate-900">@user.Name</td>
                                    <td class="px-4 py-3 text-slate-500">@user.Email</td>
                                    <td class="px-4 py-3">
                                        <select class="rounded-lg border border-slate-200 px-2 py-1 text-sm" value="@user.Role" @onchange="eventArgs => ChangeRoleAsync(user, eventArgs.Value?.ToString())">
                                            @foreach (var role in _roles)
                                            {
                                                <option value="@role">@role</option>
                                            }
                                        </select>
                                    </td>
                                    <td class="px-4 py-3">
                                        @if (user.IsBlocked)
                                        {
                                            <span class="rounded-full bg-red-100 px-3 py-1 text-xs font-semibold text-red-700">Blocked</span>
                                        }
                                        else
                                        {
                                            <span class="rounded-full bg-green-100 px-3 py-1 text-xs font-semibold text-green-800">Active</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-right text-xs font-semibold">
                                        @if (user.IsBlocked)
                                        {
                                            <button class="rounded-full border border-green-200 px-3 py-1 text-green-700" @onclick="() => ToggleBlockAsync(user, false)">Unblock</button>
                                        }
                                        else
                                        {
                                            <button class="rounded-full border border-red-200 px-3 py-1 text-red-700" @onclick="() => ToggleBlockAsync(user, true)">Block</button>
                                        }
                                        <button class="ml-2 rounded-full border border-slate-200 px-3 py-1 text-slate-600" @onclick="() => DeleteUserAsync(user)">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </section>
    </div>
</section>

@code {
    private readonly AdminCreateUserModel _newUser = new();
    private readonly AccountRole[] _roles = Enum.GetValues<AccountRole>();
    private List<AdminUserSummary>? _users;
    private bool _isLoading;
    private bool _isCreating;
    private string? _createMessage;
    private string? _tableMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        _isLoading = true;
        _tableMessage = null;
        StateHasChanged();
        _users = (await AdminUserService.GetUsersAsync()).ToList();
        _isLoading = false;
    }

    private async Task CreateUserAsync()
    {
        _isCreating = true;
        _createMessage = null;
        StateHasChanged();

        var request = new AdminCreateUserRequest(_newUser.FullName, _newUser.Email, _newUser.Password, _newUser.Role);
        var result = await AdminUserService.CreateUserAsync(request);
        _createMessage = result.Message;

        if (result.Succeeded)
        {
            _newUser.Reset();
            await LoadUsersAsync();
        }

        _isCreating = false;
    }

    private async Task ChangeRoleAsync(AdminUserSummary user, string? newRole)
    {
        if (string.IsNullOrWhiteSpace(newRole))
        {
            return;
        }

        if (!Enum.TryParse<AccountRole>(newRole, out var parsedRole))
        {
            _tableMessage = "Unknown role.";
            return;
        }

        var result = await AdminUserService.UpdateRoleAsync(user.Id, parsedRole);
        _tableMessage = result.Message;
        if (result.Succeeded)
        {
            await LoadUsersAsync();
        }
    }

    private async Task ToggleBlockAsync(AdminUserSummary user, bool shouldBlock)
    {
        var result = shouldBlock
            ? await AdminUserService.BlockUserAsync(user.Id)
            : await AdminUserService.UnblockUserAsync(user.Id);

        _tableMessage = result.Message;
        if (result.Succeeded)
        {
            await LoadUsersAsync();
        }
    }

    private async Task DeleteUserAsync(AdminUserSummary user)
    {
        var result = await AdminUserService.DeleteUserAsync(user.Id);
        _tableMessage = result.Message;
        if (result.Succeeded)
        {
            await LoadUsersAsync();
        }
    }

    private sealed class AdminCreateUserModel
    {
        [Required]
        [StringLength(80)]
        public string FullName { get; set; } = string.Empty;

        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        [MinLength(8)]
        public string Password { get; set; } = string.Empty;

        [Required]
        public AccountRole Role { get; set; } = AccountRole.Customer;

        public void Reset()
        {
            FullName = string.Empty;
            Email = string.Empty;
            Password = string.Empty;
            Role = AccountRole.Customer;
        }
    }
}
