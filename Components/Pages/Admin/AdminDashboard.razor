@page "/admin"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Authorization
@using System.ComponentModel.DataAnnotations
@using System.Linq
@inject AdminUserService AdminUserService

<PageTitle>Admin dashboard</PageTitle>

<section class="min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-900 py-12 text-white">
    <div class="mx-auto max-w-6xl space-y-10 px-4">
        <header class="rounded-3xl border border-white/10 bg-white/5 p-8 backdrop-blur">
            <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
                <div>
                    <p class="text-xs uppercase tracking-[0.3em] text-orange-200">Admin control center</p>
                    <h1 class="mt-2 text-3xl font-bold">Keep every LoadHitch account clean.</h1>
                    <p class="mt-2 text-sm text-slate-200 max-w-3xl">Approve new teams, rotate roles, and block malicious actors from a single cockpit with live status chips and role-aware tooling.</p>
                </div>
                <button class="rounded-2xl border border-white/20 px-4 py-2 text-sm text-white hover:bg-white/10" @onclick="LoadUsersAsync" disabled="@_isLoading">
                    @(_isLoading ? "Refreshing..." : "Refresh list")
                </button>
            </div>
        </header>

        <section class="grid gap-8 lg:grid-cols-[1.05fr_0.95fr]">
            <div class="rounded-3xl border border-white/10 bg-white/5 p-8 backdrop-blur shadow-xl">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs uppercase tracking-[0.3em] text-orange-200">Provision access</p>
                        <h2 class="mt-2 text-2xl font-semibold">Create a new user</h2>
                    </div>
                    <span class="rounded-full bg-blue-500/15 px-3 py-1 text-xs text-blue-200">Instant</span>
                </div>

                @if (!string.IsNullOrWhiteSpace(_createMessage))
                {
                    <div class="mt-4 rounded-2xl border border-emerald-400/30 bg-emerald-400/10 px-4 py-3 text-sm text-emerald-100">@_createMessage</div>
                }

                <EditForm FormName="admin-create-user" Model="_newUser" OnValidSubmit="CreateUserAsync">
                    <DataAnnotationsValidator />
                    <div class="mt-6 grid gap-4 md:grid-cols-2">
                        <label class="text-sm font-semibold text-slate-200">
                            Full name
                            <InputText class="mt-2 w-full rounded-2xl border border-white/20 bg-slate-900/40 px-4 py-3 text-white" @bind-Value="_newUser.FullName" />
                        </label>
                        <label class="text-sm font-semibold text-slate-200">
                            Email
                            <InputText type="email" class="mt-2 w-full rounded-2xl border border-white/20 bg-slate-900/40 px-4 py-3 text-white" @bind-Value="_newUser.Email" />
                        </label>
                        <label class="text-sm font-semibold text-slate-200">
                            Password
                            <InputText type="password" class="mt-2 w-full rounded-2xl border border-white/20 bg-slate-900/40 px-4 py-3 text-white" @bind-Value="_newUser.Password" />
                        </label>
                        <label class="text-sm font-semibold text-slate-200">
                            Role
                            <InputSelect class="mt-2 w-full rounded-2xl border border-white/20 bg-slate-900/40 px-4 py-3 text-white" @bind-Value="_newUser.Role">
                                @foreach (var role in _roles)
                                {
                                    <option value="@role">@role</option>
                                }
                            </InputSelect>
                        </label>
                    </div>
                    <button type="submit" class="mt-6 w-full rounded-2xl bg-orange-500 px-6 py-3 text-sm font-semibold text-white hover:bg-orange-400 disabled:opacity-40" disabled="@_isCreating">
                        @(_isCreating ? "Creating..." : "Create user")
                    </button>
                </EditForm>
            </div>

            <div class="rounded-3xl border border-white/10 bg-white/5 p-8 backdrop-blur shadow-xl">
                <p class="text-xs uppercase tracking-[0.3em] text-orange-200">Org telemetry</p>
                <div class="mt-4 grid gap-4 sm:grid-cols-2">
                    <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
                        <p class="text-sm text-slate-300">Active accounts</p>
                        <p class="mt-2 text-3xl font-semibold">@(_users?.Count ?? 0)</p>
                        <p class="text-xs text-slate-400">Across Admin/Driver/Customer roles</p>
                    </div>
                    <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
                        <p class="text-sm text-slate-300">Blocked users</p>
                        <p class="mt-2 text-3xl font-semibold">@(_users?.Count(u => u.IsBlocked) ?? 0)</p>
                        <p class="text-xs text-slate-400">Lockouts enforced via Identity</p>
                    </div>
                </div>
                <p class="mt-6 text-sm text-slate-300">Use the table on the right to adjust roles, block risky accounts, or remove stale users.</p>
            </div>
        </section>

        <section class="rounded-3xl border border-white/10 bg-white/5 p-6 backdrop-blur shadow-xl">
            <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
                <div>
                    <p class="text-xs uppercase tracking-[0.3em] text-orange-200">Directory</p>
                    <h2 class="text-2xl font-semibold">LoadHitch accounts</h2>
                </div>
                <button class="rounded-2xl border border-white/20 px-4 py-2 text-xs text-white hover:bg-white/10" @onclick="LoadUsersAsync" disabled="@_isLoading">
                    @(_isLoading ? "Refreshing..." : "Refresh list")
                </button>
            </div>

            @if (_tableMessage is not null)
            {
                <div class="mt-4 rounded-2xl border border-slate-200/30 bg-white/10 px-4 py-3 text-sm text-slate-100">@_tableMessage</div>
            }

            @if (_isLoading)
            {
                <p class="mt-6 text-sm text-slate-300">Loading users...</p>
            }
            else if (_users?.Count == 0)
            {
                <p class="mt-6 text-sm text-slate-300">No users yet. Create one above.</p>
            }
            else if (_users is not null)
            {
                <div class="mt-6 overflow-x-auto">
                    <table class="min-w-full text-left text-sm text-slate-200">
                        <thead>
                            <tr class="text-xs uppercase tracking-[0.3em] text-slate-400">
                                <th class="px-4 py-2">Name</th>
                                <th class="px-4 py-2">Email</th>
                                <th class="px-4 py-2">Role</th>
                                <th class="px-4 py-2">Status</th>
                                <th class="px-4 py-2 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in _users)
                            {
                                <tr class="border-t border-white/10">
                                    <td class="px-4 py-4 font-semibold">@user.Name</td>
                                    <td class="px-4 py-4 text-slate-300">@user.Email</td>
                                    <td class="px-4 py-4">
                                        <select class="rounded-xl border border-white/20 bg-slate-900/40 px-3 py-1 text-sm" value="@user.Role" @onchange="eventArgs => ChangeRoleAsync(user, eventArgs.Value?.ToString())">
                                            @foreach (var role in _roles)
                                            {
                                                <option value="@role">@role</option>
                                            }
                                        </select>
                                    </td>
                                    <td class="px-4 py-4">
                                        @if (user.IsBlocked)
                                        {
                                            <span class="rounded-full bg-red-500/20 px-3 py-1 text-xs font-semibold text-red-200">Blocked</span>
                                        }
                                        else
                                        {
                                            <span class="rounded-full bg-green-500/20 px-3 py-1 text-xs font-semibold text-green-200">Active</span>
                                        }
                                    </td>
                                    <td class="px-4 py-4 text-right text-xs font-semibold space-x-2">
                                        @if (user.IsBlocked)
                                        {
                                            <button class="rounded-full border border-green-400/50 px-3 py-1 text-green-200 hover:bg-green-500/10" @onclick="() => ToggleBlockAsync(user, false)">Unblock</button>
                                        }
                                        else
                                        {
                                            <button class="rounded-full border border-red-400/50 px-3 py-1 text-red-200 hover:bg-red-500/10" @onclick="() => ToggleBlockAsync(user, true)">Block</button>
                                        }
                                        <button class="rounded-full border border-white/20 px-3 py-1 text-slate-200 hover:bg-white/10" @onclick="() => DeleteUserAsync(user)">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </section>
    </div>
</section>

@code {
    private readonly AdminCreateUserModel _newUser = new();
    private readonly AccountRole[] _roles = Enum.GetValues<AccountRole>();
    private List<AdminUserSummary>? _users;
    private bool _isLoading;
    private bool _isCreating;
    private string? _createMessage;
    private string? _tableMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        _isLoading = true;
        _tableMessage = null;
        StateHasChanged();
        _users = (await AdminUserService.GetUsersAsync()).ToList();
        _isLoading = false;
    }

    private async Task CreateUserAsync()
    {
        _isCreating = true;
        _createMessage = null;
        StateHasChanged();

        var request = new AdminCreateUserRequest(_newUser.FullName, _newUser.Email, _newUser.Password, _newUser.Role);
        var result = await AdminUserService.CreateUserAsync(request);
        _createMessage = result.Message;

        if (result.Succeeded)
        {
            _newUser.Reset();
            await LoadUsersAsync();
        }

        _isCreating = false;
    }

    private async Task ChangeRoleAsync(AdminUserSummary user, string? newRole)
    {
        if (string.IsNullOrWhiteSpace(newRole))
        {
            return;
        }

        if (!Enum.TryParse<AccountRole>(newRole, out var parsedRole))
        {
            _tableMessage = "Unknown role.";
            return;
        }

        var result = await AdminUserService.UpdateRoleAsync(user.Id, parsedRole);
        _tableMessage = result.Message;
        if (result.Succeeded)
        {
            await LoadUsersAsync();
        }
    }

    private async Task ToggleBlockAsync(AdminUserSummary user, bool shouldBlock)
    {
        var result = shouldBlock
            ? await AdminUserService.BlockUserAsync(user.Id)
            : await AdminUserService.UnblockUserAsync(user.Id);

        _tableMessage = result.Message;
        if (result.Succeeded)
        {
            await LoadUsersAsync();
        }
    }

    private async Task DeleteUserAsync(AdminUserSummary user)
    {
        var result = await AdminUserService.DeleteUserAsync(user.Id);
        _tableMessage = result.Message;
        if (result.Succeeded)
        {
            await LoadUsersAsync();
        }
    }

    private sealed class AdminCreateUserModel
    {
        [Required]
        [StringLength(80)]
        public string FullName { get; set; } = string.Empty;

        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        [MinLength(8)]
        public string Password { get; set; } = string.Empty;

        [Required]
        public AccountRole Role { get; set; } = AccountRole.Customer;

        public void Reset()
        {
            FullName = string.Empty;
            Email = string.Empty;
            Password = string.Empty;
            Role = AccountRole.Customer;
        }
    }
}
