@page "/login"
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation

<PageTitle>Log in - LoadHitch</PageTitle>

<section class="min-h-screen bg-gradient-to-br from-teal-50 via-blue-50 to-purple-50 py-16 flex items-center justify-center">
    <div class="w-full max-w-md mx-4">
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden">
            <!-- Header with gradient -->
            <div class="bg-gradient-to-r from-teal-600 to-blue-600 px-8 py-10 text-white text-center">
                <h1 class="text-3xl font-bold mb-2">Welcome Back! üëã</h1>
                <p class="text-teal-50">Sign in to access your LoadHitch dashboard</p>
            </div>

            <div class="p-8">
                @if (!string.IsNullOrWhiteSpace(_error))
                {
                    <div class="mb-6 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700 flex items-start gap-2">
                        <span class="text-lg">‚ö†Ô∏è</span>
                        <span>@_error</span>
                    </div>
                }

                <EditForm EditContext="_editContext" FormName="login-form" OnValidSubmit="HandleLoginAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="mb-6 rounded-xl border border-amber-200 bg-amber-50 px-4 py-3 text-sm text-amber-700" />
                    
                    <div class="space-y-5">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                üìß Email Address
                            </label>
                            <InputText type="email" 
                                      class="w-full rounded-xl border-2 border-gray-200 px-4 py-3 focus:border-teal-500 focus:ring-4 focus:ring-teal-100 transition-all" 
                                      placeholder="you@example.com"
                                      @bind-Value="_model.Email" />
                            <ValidationMessage For="@(() => _model.Email)" class="mt-1.5 text-xs text-red-600 font-medium" />
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                üîí Password
                            </label>
                            <InputText type="password" 
                                      class="w-full rounded-xl border-2 border-gray-200 px-4 py-3 focus:border-teal-500 focus:ring-4 focus:ring-teal-100 transition-all" 
                                      placeholder="Enter your password"
                                      @bind-Value="_model.Password" />
                            <ValidationMessage For="@(() => _model.Password)" class="mt-1.5 text-xs text-red-600 font-medium" />
                        </div>

                        <div class="flex items-center justify-between">
                            <label class="flex items-center gap-2 text-sm font-medium text-gray-600 cursor-pointer">
                                <InputCheckbox class="h-4 w-4 rounded border-gray-300 text-teal-600 focus:ring-teal-500" @bind-Value="_model.RememberMe" />
                                Keep me signed in
                            </label>
                            <a href="/forgot-password" class="text-sm font-semibold text-teal-600 hover:text-teal-700">
                                Forgot password?
                            </a>
                        </div>
                    </div>

                    <button type="submit" 
                            class="mt-8 w-full rounded-xl bg-gradient-to-r from-teal-600 to-blue-600 px-6 py-4 text-white font-bold text-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all disabled:opacity-60 disabled:cursor-not-allowed" 
                            disabled="@_isSubmitting">
                        @_buttonText
                    </button>
                </EditForm>

                <div class="mt-8 pt-6 border-t border-gray-200 text-center">
                    <p class="text-sm text-gray-600">
                        Don't have an account?
                        <a class="font-bold text-teal-600 hover:text-teal-700 ml-1" href="/register">Sign up free ‚Üí</a>
                    </p>
                </div>
            </div>
        </div>

        <!-- Back to home link -->
        <div class="mt-6 text-center">
            <a href="/" class="text-sm text-gray-600 hover:text-gray-900 font-medium">
                ‚Üê Back to home
            </a>
        </div>
    </div>
</section>

@code {
    private readonly LoginModel _model = new();
    private EditContext? _editContext;
    private bool _isSubmitting;
    private string _error = string.Empty;

    private string _buttonText => _isSubmitting ? "Signing in..." : "Sign in";

    protected override void OnInitialized()
    {
        _editContext = new EditContext(_model);
    }

    private async Task HandleLoginAsync()
    {
        _isSubmitting = true;
        _error = string.Empty;

        try
        {
            var result = await SignInManager.PasswordSignInAsync(_model.Email, _model.Password, _model.RememberMe, lockoutOnFailure: true);
            if (!result.Succeeded)
            {
                if (result.IsLockedOut)
                {
                    _error = "This account is currently blocked.";
                }
                else
                {
                    _error = "Invalid email or password.";
                }
                return;
            }

            var user = await UserManager.FindByEmailAsync(_model.Email);
            var dashboard = "/dashboard";

            if (user is not null)
            {
                if (await UserManager.IsInRoleAsync(user, "Admin"))
                {
                    dashboard = "/admin";
                }
                else if (await UserManager.IsInRoleAsync(user, "Driver"))
                {
                    dashboard = "/dashboard/driver";
                }
                else if (await UserManager.IsInRoleAsync(user, "Customer"))
                {
                    dashboard = "/dashboard/customer";
                }
            }

            Navigation.NavigateTo(dashboard, forceLoad: true);
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private sealed class LoginModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;

        public bool RememberMe { get; set; }
    }
}
