@page "/logout"
@inject NavigationManager Navigation

<PageTitle>Signing out - LoadHitch</PageTitle>

<section class="min-h-screen bg-slate-50 flex items-center justify-center">
    <div class="max-w-md mx-auto px-6">
        <div class="text-center mb-8">
            <a href="/" class="text-3xl font-serif italic text-teal-500">LoadHitch</a>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm text-center">
            <div class="flex justify-center mb-6">
                <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-teal-500"></div>
            </div>
            <h1 class="text-2xl font-bold text-slate-900">Signing you out...</h1>
            <p class="mt-3 text-slate-600">Please wait while we securely sign you out.</p>
        </div>
    </div>
</section>

@code {
    protected override void OnInitialized()
    {
        // Redirect to the API signout endpoint which handles session clearing
        Navigation.NavigateTo("/api/auth/signout", forceLoad: true);
    }
}
